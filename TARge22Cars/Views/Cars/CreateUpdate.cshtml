@using TARge22Cars.Models.Cars;
@model TARge22Cars.Models.Cars.CarsCreateUpdateViewModel

@if (Model.CarId.HasValue)
{
    <header>
        <h3>Update</h3>
    </header>
}
else
{
    <header>
        <h3>Create</h3>
    </header>
}

<section>
    <div>
        <form method="post">
            <input asp-for="CarId" type="hidden"/>
            <input asp-for="CreatedAt" type="hidden"/>
            <input asp-for="UpdatedAt" type="hidden"/>

            <div class="form-group row">
                <label asp-for="Make" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Make" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Model" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Model" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Color" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Color" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Year" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Year" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Power" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Power" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Transmission" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Transmission" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Drivetrain" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Drivetrain" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Fuel" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Fuel" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="FuelConsumption" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="FuelConsumption" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Mileage" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Mileage" class="form-control" />
                </div>
            </div>
            @if (Model.CarId.HasValue)
            {
                <input asp-action="update" asp-controller="cars" type="submit" class="btn btn-outline-warning" value="Update" />
            }
            else
            {
                <input asp-action="create" asp-controller="cars" type="submit" class="btn btn-outline-primary" value="Create" />

            }
            <a asp-action="index" class="btn btn-primary">Back</a>
        </form>
    </div>
</section>
