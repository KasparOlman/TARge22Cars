@model TARge22Cars.Models.Cars.CarsDetailsViewModel

<header>
    <h2 style="padding:20px">Details</h2>
</header>

<body>
    <div style="text-align: left; padding: 15px">
        <dl class="row">

            <div class="form-group-row">
                <label asp-for="CarId" class="col-sm-3 col-form-label"></label>
                @Html.DisplayFor(model => model.CarId)
            </div>

            <div class="form-group-row">
                <label asp-for="Make" class="col-sm-3 col-form-label"></label>
                @Html.DisplayFor(model => model.Make)
            </div>

            <div class="form-group-row">
                <label asp-for="Model" class="col-sm-3 col-form-label"></label>
                @Html.DisplayFor(model => model.Model)
            </div>

            <div class="form-group-row">
                <label asp-for="Year" class="col-sm-3 col-form-label"></label>
                @Html.DisplayFor(model => model.Year)
            </div>


            <div class="form-group-row">
                <label asp-for="Color" class="col-sm-3 col-form-label"></label>
                @Html.DisplayFor(model => model.Color)
            </div>

            <div class="form-group-row">
                <label asp-for="Power" class="col-sm-3 col-form-label"></label>
                @Html.DisplayFor(model => model.Power)kW
            </div>

            <div class="form-group-row">
                <label asp-for="Transmission" class="col-sm-3 col-form-label"></label>
                @Html.DisplayFor(model => model.Transmission)
            </div>

            <div class="form-group-row">
                <label asp-for="Fuel" class="col-sm-3 col-form-label"></label>
                @Html.DisplayFor(model => model.Fuel)
            </div>

            <div class="form-group-row">
                <label asp-for="FuelConsumption" class="col-sm-3 col-form-label"></label>
                @Html.DisplayFor(model => model.FuelConsumption)l/100
            </div>

            <div class="form-group-row">
                <label asp-for="Mileage" class="col-sm-3 col-form-label"></label>
                @Html.DisplayFor(model => model.Mileage)km
            </div>

            <div class="form-group-row">
                <label asp-for="CreatedAt" class="col-sm-3 col-form-label"></label>
                @Html.DisplayFor(model => model.CreatedAt)
            </div>

            <div class="form-group-row">
                <label asp-for="UpdatedAt" class="col-sm-3 col-form-label"></label>
                @Html.DisplayFor(model => model.UpdatedAt)
            </div>

        </dl>
        <a asp-action ="Index" asp-controller="cars" class="btn btn-outline-primary">Back</a>
    </div>
</body>